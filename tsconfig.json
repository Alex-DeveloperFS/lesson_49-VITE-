{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true // Или используйте 'emitDeclarationOnly' вместо 'noEmit'
  },
  "include": [
    "src/**/*",
    "custom.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}




